<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qinweizhao.user.mapper.UmsAddressMapper">

    <resultMap type="UmsAddress" id="UmsAddressResult">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="phone" column="phone"/>
        <result property="postCode" column="post_code"/>
        <result property="province" column="province"/>
        <result property="city" column="city"/>
        <result property="region" column="region"/>
        <result property="detailAddress" column="detail_address"/>
        <result property="areaCode" column="area_code"/>
        <result property="defaultStatus" column="default_status"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectUmsAddressVo">
        select id,
               user_id,
               name,
               phone,
               post_code,
               province,
               city,
               region,
               detail_address,
               area_code,
               default_status,
               create_by,
               update_by,
               create_time,
               update_time,
               remark
        from ums_member_receive_address
    </sql>

    <select id="selectUmsAddressList" parameterType="UmsAddress"
            resultMap="UmsAddressResult">
        <include refid="selectUmsAddressVo"/>
        <where>
            <if test="memberId != null ">and user_id = #{memberId}</if>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="phone != null  and phone != ''">and phone = #{phone}</if>
            <if test="postCode != null  and postCode != ''">and post_code = #{postCode}</if>
            <if test="province != null  and province != ''">and province = #{province}</if>
            <if test="city != null  and city != ''">and city = #{city}</if>
            <if test="region != null  and region != ''">and region = #{region}</if>
            <if test="detailAddress != null  and detailAddress != ''">and detail_address = #{detailAddress}</if>
            <if test="areaCode != null  and areaCode != ''">and area_code = #{areaCode}</if>
            <if test="defaultStatus != null ">and default_status = #{defaultStatus}</if>
        </where>
    </select>

</mapper>