<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qinweizhao.ware.mapper.WmsWareInfoMapper">

    <resultMap type="WmsWareInfo" id="WmsWareInfoResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="areacode" column="areacode"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectWmsWareInfoVo">
        select id,
               name,
               address,
               areacode,
               create_by,
               update_by,
               create_time,
               update_time,
               remark
        from wms_ware_info
    </sql>

    <select id="selectWmsWareInfoList" parameterType="WmsWareInfo" resultMap="WmsWareInfoResult">
        <include refid="selectWmsWareInfoVo"/>
        <where>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="address != null  and address != ''">and address = #{address}</if>
            <if test="areacode != null  and areacode != ''">and areacode = #{areacode}</if>
        </where>
    </select>

    <select id="selectWmsWareInfoById" parameterType="Long" resultMap="WmsWareInfoResult">
        <include refid="selectWmsWareInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertWmsWareInfo" parameterType="WmsWareInfo" useGeneratedKeys="true" keyProperty="id">
        insert into wms_ware_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="address != null">address,</if>
            <if test="areacode != null">areacode,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="address != null">#{address},</if>
            <if test="areacode != null">#{areacode},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateWmsWareInfo" parameterType="WmsWareInfo">
        update wms_ware_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="address != null">address = #{address},</if>
            <if test="areacode != null">areacode = #{areacode},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteWmsWareInfoById" parameterType="Long">
        delete
        from wms_ware_info
        where id = #{id}
    </delete>

    <delete id="deleteWmsWareInfoByIds" parameterType="String">
        delete from wms_ware_info where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>